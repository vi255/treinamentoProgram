<form id="frm_edit_product" name="productEditForm" novalidate>
    <div class="modal-header">
        <button type="button" class="close" ng-click="vm.cancel()" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title">
            <span>@L("Create or Edit Product")</span>
        </h4>
    </div>
    <div class="modal-body">
        <div class="row clearfix">
            <div class="col-sm-6">
                <div class="form-group form-float">
                    <label for="productnome" class="form-label">@L("Nome")</label>
                    <div class="form-line">
                        <input id="productnome" type="text" name="ProductNome" ng-model="vm.product.nome" required maxlength="32" minlength="2" class="validate form-control">
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group form-float">
                    <label for="valor" class="form-label">@L("Valor")</label>
                    <div class="form-line">
                        <input id="valor" type="number" name="Valor" ng-model="vm.product.valor" required maxlength="50" minlength="1" class="validate form-control">
                    </div>
                </div>
            </div>
        </div>
        <div class="row clearfix">
            <div class="col-sm-12">
                <div class="form-group form-float">
                    <label for="descricao" class="form-label">@L("Description")</label>
                    <div class="form-line">
                        <input id="descricao" type="text" name="Descricao" ng-model="vm.product.descricao" required maxlength="50" minlength="2" class="validate form-control">
                    </div>
                </div>
            </div>
        </div>

        <br />

    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" ng-click="vm.cancel()">
            @L("Cancel")
        </button>
        <button type="submit" class="btn btn-primary waves-effect" ng-click="vm.save()" ng-disabled="produtoEditForm.$invalid">
            @L("Save")
        </button>
    </div>
</form>